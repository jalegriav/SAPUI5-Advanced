<mvc:View controllerName="logaligroup.Employees.controller.Main" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true" 
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:f="sap.f">
	<Shell id="shell">
		<App id="app">
			<pages>
                <Page showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="fcl" backgroundDesign="Solid" layout="OneColumn">
                            <f:beginColumnPages>
                                <mvc:XMLView id="masterEmployeeView" viewName="logaligroup.Employees.view.MasterEmployee"></mvc:XMLView>
                            </f:beginColumnPages>
                            <f:beginColumnPages>
                                <mvc:XMLView id="detailEmployeeView" viewName="logaligroup.Employees.view.EmployeeDetails"></mvc:XMLView>
                            </f:beginColumnPages>
                            <f:beginColumnPages>
                                <Page >                                
                                </Page>
                            </f:beginColumnPages>                                                        
                        </f:FlexibleColumnLayout>
                    </content>
                </Page>
            </pages>
		</App>
	</Shell> 
</mvc:View>          